@model Busreservation.Models.Driver

@{
    ViewData["Title"] = "EditDriver";
    Layout = "~/Views/Shared/Dashbordlayout.cshtml";
}

<h1>EditDriver</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDriver">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DriverId" />
            <div class="form-group">
                <label asp-for="DriverName" class="control-label"></label>
                <input asp-for="DriverName" class="form-control" />
                <span asp-validation-for="DriverName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverAge" class="control-label"></label>
                <input asp-for="DriverAge" class="form-control" />
                <span asp-validation-for="DriverAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverGender" class="control-label"></label>
                <input asp-for="DriverGender" class="form-control" />
                <span asp-validation-for="DriverGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
