@model Busreservation.Models.TripDetail

@{
    ViewData["Title"] = "EditTrip";
    Layout = "~/Views/Shared/Dashbordlayout.cshtml";
}

<h1>EditTrip</h1>

<h4>TripDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTrip">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TripCode" />
            <div class="form-group">
                <label asp-for="RouteId" class="control-label"></label>
                <select asp-for="RouteId" class="form-control" asp-items="ViewBag.RouteId"></select>
                <span asp-validation-for="RouteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusId" class="control-label"></label>
                <select asp-for="BusId" class="form-control" asp-items="ViewBag.BusId"></select>
                <span asp-validation-for="BusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TripDate" class="control-label"></label>
                <input asp-for="TripDate" class="form-control" />
                <span asp-validation-for="TripDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfSeatsBooked" class="control-label"></label>
                <input asp-for="NoOfSeatsBooked" class="form-control" />
                <span asp-validation-for="NoOfSeatsBooked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

