@model Busreservation.Models.BusRoute

@{
    ViewData["Title"] = "AddBusRoute";
    Layout = "~/Views/Shared/Dashbordlayout.cshtml";
    @*<% List<Busreservation.Models.BusRoute>
    busid = ViewData["BusId"];*@
    }



    <h3>Add Bus Route</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddBusRoute">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BusId" class="control-label"></label>
                    <select asp-for="BusId" class="form-control" asp-items="ViewBag.BusId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="RouteId" class="control-label"></label>
                    <input asp-for="RouteId" class="form-control" />
                    <span asp-validation-for="RouteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusSource" class="control-label"></label>
                    <input asp-for="BusSource" class="form-control" />
                    <span asp-validation-for="BusSource" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusDestination" class="control-label"></label>
                    <input asp-for="BusDestination" class="form-control" />
                    <span asp-validation-for="BusDestination" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fare" class="control-label"></label>
                    <input asp-for="Fare" class="form-control" />
                    <span asp-validation-for="Fare" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="BusRoute">Back</a>
    </div>

