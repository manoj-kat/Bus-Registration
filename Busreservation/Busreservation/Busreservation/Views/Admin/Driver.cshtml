@model IEnumerable<Busreservation.Models.Driver>

@{
    ViewData["Title"] = "Driver";
    Layout = "~/Views/Shared/Dashbordlayout.cshtml";
}

<h1>Driver</h1>

<p>
<a asp-action="CreateDriver">Add Driver</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverGender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverGender)
                </td>
                <td>
                    <a asp-action="EditDriver" asp-route-id="@item.DriverId">Edit</a> |
                    <a asp-action="DriverDetails" asp-route-id="@item.DriverId">Details</a> |
                    <a asp-action="DeleteDriver" asp-route-id="@item.DriverId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
