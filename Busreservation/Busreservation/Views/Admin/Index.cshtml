@model Busreservation.Models.Admin
@{
    ViewData["Title"] = "Index";
    Layout = "adminconsole";
    var error = ViewBag.error != null ? ViewBag.error : string.Empty;
}
<h3>Admin Login</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="adminId" class="control-label">admin</label>
                <input asp-for="adminId" class="form-control" type="text" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adminpass" class="control-label">Password</label>
                <input asp-for="adminpass" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" asp-action="Index" asp-controller="Admin" class="btn btn-primary" />
            </div>
            <b>@ViewBag.error</b>
        </form>
    </div>
</div>

